# Database Configuration (Existing External Database)
DATABASE_URL=postgresql://username:password@host:port/database_name
POSTGRES_DATABASE_URL=postgresql://username:password@host:port/database_name

# Redis Configuration (Existing External Redis)
REDIS_URL=redis://host:port
REDIS_DEFAULT_EXPIRY=3600

# API Configuration
API_PORT=8000
API_PREFIX=/api/v1

# Keycloak Configuration (if using authentication)
KEYCLOAK_HOST=http://localhost:8080
KEYCLOAK_REALM=donnhasach
KEYCLOAK_CLIENT_ID=donnhasach-client
KEYCLOAK_CLIENT_SECRET=your-client-secret

# Firebase Configuration (if using)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_FCM_URL=https://fcm.googleapis.com/v1/projects/your-project-id/messages:send
FIREBASE_TOPIC=donnhasach

# Odoo Configuration (for ERP integration - REQUIRED for Blog API)
ODOO_URL=http://your-odoo-server:8069
ODOO_TOKEN=your-odoo-token
ODOO_OAUTH_PROVIDER_ID=4

# Sentry Configuration (for error tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Development/Production Environment
ENVIRONMENT=development
DEBUG=true

# RabbitMQ Configuration (if needed for other services)
RABBITMQ_URL=amqp://username:password@host:port/ 